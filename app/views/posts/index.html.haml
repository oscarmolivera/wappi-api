.container
  - if @posts.any?
    %table#listing_posts.table{"data-hook" => ""}
      %thead
        %tr{"data-hook" => "posts_index_headers"}
          %th= 'PostID'
          %th= 'UserID'
          %th= 'PostTITLE'
          %th= 'PostBODY'
          %th.actions{"data-hook" => "posts_header_actions"}
      %tbody
        - @posts.each.with_index do |post|
          %tr{class: "#{cycle('odd', 'even')}", "data-hook" => "admin_posts_index_rows"}
            %td= post.id
            %td= post.user_id
            %td= post.title
            %td= post.body
    = pagy_bootstrap_nav(@pagy).html_safe
  - else
    .alert.alert-info.no-objects-found
      = "No Posts Found"